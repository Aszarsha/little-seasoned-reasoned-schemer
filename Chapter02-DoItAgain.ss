(define lat?
  (lambda (l)
    (cond
      ((null? l) #t)
      ((atom? (car l)) (lat? (cdr l)))
      (else #f))))

(lat? '(Jack Sprat could eat no chicken fat))
; => true
(lat? '((Jack) Sprat could eat no chicken fat))
; => false
(lat? '(Jack (Sprat could) eat no chicken fat))
; => false
(lat? '())
; => true
(lat? '(bacon and eggs))
; => true

