(define member?
  (lambda (a lat)
    (cond
      ((null? lat) false)
      (true (or (eq? (car lat) a)
                (member? a (cdr lat)))))))

(member? 'tea '(cofee tea or milk))
; => true
(member? 'poached '(fried eggs and scambled eggs))
; => false
(member? 'meat '(mashed potatoes and meat gravy))
; => true

